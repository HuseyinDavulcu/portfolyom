    <!-- PROJE DETAY MODALI (POPUP) -->
    <div id="project-modal" class="fixed inset-0 z-[60] flex items-center justify-center bg-black/80 backdrop-blur-sm hidden opacity-0 transition-opacity duration-300" onclick="closeModal(event)">
        <!-- Modal İçeriği -->
        <div class="bg-white dark:bg-gray-900 rounded-2xl w-full max-w-5xl mx-4 shadow-2xl overflow-hidden flex flex-col max-h-[90vh] relative transform scale-95 transition-transform duration-300" id="modal-content">
            
            <!-- Kapat Butonu -->
            <button onclick="closeModal(null, true)" class="absolute top-4 right-4 z-50 p-2 bg-white/10 hover:bg-white/20 rounded-full text-gray-800 dark:text-white transition">
                <i class="fas fa-times text-xl"></i>
            </button>

            <div class="flex flex-col md:flex-row h-full">
                <!-- Sol Taraf: Galeri -->
                <div class="w-full md:w-3/5 bg-gray-100 dark:bg-gray-800 flex flex-col">
                    <!-- Ana Resim -->
                    <div class="flex-grow relative flex items-center justify-center p-4 h-[40vh] md:h-auto">
                        <img id="modal-main-image" src="" alt="Proje Detay" class="max-w-full max-h-full object-contain rounded-lg shadow-lg">
                    </div>
                    <!-- Küçük Resimler (Thumbnails) -->
                    <div id="modal-thumbnails" class="h-24 bg-gray-200 dark:bg-gray-900 p-2 flex gap-2 overflow-x-auto items-center justify-center border-t border-gray-300 dark:border-gray-700">
                        <!-- JS ile doldurulacak -->
                    </div>
                </div>

                <!-- Sağ Taraf: Bilgiler -->
                <div class="w-full md:w-2/5 p-8 overflow-y-auto bg-white dark:bg-gray-900">
                    <span id="modal-category" class="inline-block px-3 py-1 text-xs font-bold text-brand-600 bg-brand-50 dark:bg-brand-900/30 dark:text-brand-400 rounded-full mb-4">
                        Kategori
                    </span>
                    <h3 id="modal-title" class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Proje Başlığı</h3>
                    <div class="prose dark:prose-invert max-w-none text-gray-600 dark:text-gray-300 text-sm leading-relaxed">
                        <p id="modal-description">Proje açıklaması buraya gelecek.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // --- PROJE EKLEME MODÜLÜ (GÜNCELLENMİŞ VERSİYON) ---
        // 'galeri' kısmına istediğiniz kadar resim ekleyebilirsiniz.
        
        const projelerim = [
            {
                id: 1,
                baslik: "PSI Düsseldorf Fuarı, Stand Tasarımı",
                kategori: "3D Tasarım & Fuar",
                // Ana resim (Kapak resmi)
                resim: "img/Stand1.jpg.png",
                // DETAYLARDAKİ GALERİ İÇİN RESİM LİSTESİ:
                galeri: [
                    "img/Stand1.jpg.png",
                    "img/Stand2.jpg.png",
                    
                ],
                // Kısa açıklama (Kart üzerinde görünür)
                aciklama: "Almanya'da düzenlenen promosyon ürünleri fuarı için tasarladığım, markanın kurumsal kimliğini yansıtan modüler stand tasarımı görüntüsü ve ziyareti.",
                // Uzun detay (Tıklayınca açılan pencerede görünür)
                detay: "Bu proje kapsamında PSI Düsseldorf fuarında markamızın en iyi şekilde temsil edilmesi için 120m2'lik bir alan üzerine kurulu özel bir stand tasarladım. Tasarım sürecinde SketchUp ve Lumion kullanarak 3D renderlar aldım. Standın kurulum aşamasında bizzat bulunarak teknik detayların uygulanmasını denetledim."
            },
            {
                id: 2,
                baslik: "B2B İhracat Pazarlama Stratejisi",
                kategori: "Pazarlama & Strateji",
                resim: "img/ciro_hesaplama.png",
                galeri: [
                     "img/ciro_hesaplama.png",
                     "https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=600&auto=format&fit=crop"
                ],
                aciklama: "İhracatı geliştirmek adına hazırlanan, hedef müşteri analizi ve rekabet raporlarını içeren, minimum belirlenmesi gereken fiyatı otomatik olarak maliyet hesaplayan, kapsamlı strateji Excel VBA çalışması.",
                detay: "İngiltere ve Avrupa pazarına giriş stratejisi olarak hazırlanan bu çalışmada; potansiyel müşteri listeleri, rakip fiyat analizleri ve lojistik maliyetlerin ürün birim fiyatına etkisini hesaplayan otomatik bir Excel VBA modülü geliştirdim. Bu sayede teklif verme süreci %40 hızlandı."
            },
            {
                id: 3,
                baslik: "Excel VBA - Palet Optimizasyonu",
                kategori: "Lojistik & Yazılım",
                resim: "img/vba_proje1.png.png",
                galeri: [
                    "img/vba_proje1.png.png",
                    "img/vba_proje.png.png",
                    "img/vba_proje3.png.png"
                ],
                aciklama: "Müşteri taleplerine istinaden, otomatik olarak paletleme optimizasyonu yapan bir kodlama yazdım.",
                detay: "Lojistik maliyetlerini düşürmek amacıyla, konteyner ve tır yüklemelerinde maksimum doluluk oranını hesaplayan bir algoritma yazdım. Müşteri siparişlerini girdiğinde sistem otomatik olarak en uygun koli/palet dizilimini öneriyor."
            },
            {
                id: 4,
                baslik: "3D İhracat Raporlama Sistemi",
                kategori: "Veri Analizi & 3D",
                resim: "img/3d_rapor.png",
                galeri: [
                    "img/3d_rapor.png"
                ],
                aciklama: "Dünyada konu ürün hakkında yapılan ihracat ve ithalat toplamını 3D olarak gezinilen bir rapor sistemi yaptım.",
                detay: "Geleneksel tablo raporlarının ötesine geçerek, dünya haritası üzerinde interaktif bir 3D veri görselleştirme sistemi kurdum. Bu sistem sayesinde hangi ülkeye ne kadar ihracat yapıldığı görsel olarak analiz edilebiliyor."
            }
        ];

        // --- SAYFA YÜKLENİRKEN ÇALIŞAN KODLAR ---
        const gridContainer = document.getElementById('projects-grid');

        // Projeleri Ekrana Bas
        projelerim.forEach((proje, index) => {
            // Eğer galeri tanımlanmamışsa ana resmi galeriye ekle
            if (!proje.galeri) { proje.galeri = [proje.resim]; }

            const cardHTML = `
                <div class="group project-card relative overflow-hidden rounded-2xl shadow-lg bg-gray-50 dark:bg-gray-900 border border-gray-100 dark:border-gray-700 h-full flex flex-col">
                    <!-- Resim Alanı -->
                    <div class="relative h-64 overflow-hidden flex-shrink-0">
                        <div class="absolute inset-0 bg-gray-900/10 dark:bg-gray-900/30 group-hover:bg-transparent transition z-10"></div>
                        <img src="${proje.resim}" alt="${proje.baslik}" class="w-full h-full object-cover transition-transform duration-500">
                        
                        <!-- Kategori Etiketi -->
                        <div class="absolute top-4 left-4 z-20">
                            <span class="px-3 py-1 text-xs font-bold text-white bg-brand-600 rounded-full shadow-lg">
                                ${proje.kategori}
                            </span>
                        </div>
                    </div>

                    <!-- İçerik Alanı -->
                    <div class="p-6 relative z-20 bg-white dark:bg-gray-900 transition-colors flex flex-col flex-grow">
                        <h3 class="text-xl font-bold mb-2 group-hover:text-brand-600 dark:group-hover:text-brand-400 transition">${proje.baslik}</h3>
                        <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-3 mb-4 flex-grow">
                            ${proje.aciklama}
                        </p>
                        <!-- Detay Butonu (Modalı Tetikler) -->
                        <button onclick="openModal(${index})" class="inline-flex items-center gap-2 text-sm font-semibold text-brand-600 dark:text-brand-400 hover:text-brand-800 dark:hover:text-brand-300 transition mt-auto">
                            Detayları Gör <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            `;
            gridContainer.innerHTML += cardHTML;
        });


        // --- MODAL (POPUP) İŞLEMLERİ ---
        
        const modal = document.getElementById('project-modal');
        const modalContent = document.getElementById('modal-content');
        const modalMainImage = document.getElementById('modal-main-image');
        const modalThumbnails = document.getElementById('modal-thumbnails');
        const modalTitle = document.getElementById('modal-title');
        const modalCategory = document.getElementById('modal-category');
        const modalDescription = document.getElementById('modal-description');

        // Modalı Aç
        function openModal(index) {
            const proje = projelerim[index];
            
            // İçeriği Doldur
            modalTitle.textContent = proje.baslik;
            modalCategory.textContent = proje.kategori;
            modalDescription.textContent = proje.detay || proje.aciklama; // Detay yoksa kısa açıklamayı göster
            
            // Galeri Hazırlığı
            const images = proje.galeri || [proje.resim];
            setModalImage(images[0]); // İlk resmi ana resim yap

            // Küçük Resimleri (Thumbnails) Oluştur
            modalThumbnails.innerHTML = '';
            images.forEach(imgSrc => {
                const thumb = document.createElement('img');
                thumb.src = imgSrc;
                thumb.className = "h-16 w-16 object-cover rounded cursor-pointer border-2 border-transparent hover:border-brand-500 transition opacity-70 hover:opacity-100";
                thumb.onclick = () => setModalImage(imgSrc);
                modalThumbnails.appendChild(thumb);
            });

            // Modalı Göster (Animasyonlu)
            modal.classList.remove('hidden');
            // Timeout, display:block olduktan sonra opacity transition çalışsın diye
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                modalContent.classList.remove('scale-95');
                modalContent.classList.add('scale-100');
            }, 10);
            document.body.style.overflow = 'hidden'; // Arka plan scrollunu engelle
        }

        // Ana Resmi Değiştir
        function setModalImage(src) {
            modalMainImage.style.opacity = '0.5';
            setTimeout(() => {
                modalMainImage.src = src;
                modalMainImage.style.opacity = '1';
            }, 150);
        }

        // Modalı Kapat
        function closeModal(event, force = false) {
            // Sadece siyah alana veya kapat butonuna basılınca kapat
            if (force || event.target === modal) {
                modal.classList.add('opacity-0');
                modalContent.classList.remove('scale-100');
                modalContent.classList.add('scale-95');
                
                setTimeout(() => {
                    modal.classList.add('hidden');
                    document.body.style.overflow = 'auto'; // Scrollu geri aç
                }, 300);
            }
        }

        // ESC tuşu ile kapatma
        document.addEventListener('keydown', function(event) {
            if (event.key === "Escape" && !modal.classList.contains('hidden')) {
                closeModal(null, true);
            }
        });


        // --- EXTRAS (Eski Kodlar) ---

        // Dark Mode Logic
        const toggleBtn = document.getElementById('theme-toggle');
        const html = document.documentElement; // html değişkenini tanımladım
        
        // Check local storage or system preference
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            html.classList.add('dark');
        } else {
            html.classList.remove('dark');
        }

        toggleBtn.addEventListener('click', () => {
            html.classList.toggle('dark');
            if (html.classList.contains('dark')) {
                localStorage.theme = 'dark';
            } else {
                localStorage.theme = 'light';
            }
        });

        // Mobile Menu Logic
        const menuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');

        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
